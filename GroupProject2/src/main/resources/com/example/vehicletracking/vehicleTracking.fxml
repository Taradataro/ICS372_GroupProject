<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="427.0" prefWidth="565.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.vehicletracking.vehicleTrackingController">
  <!-- Label to display the dealer name, now on top -->
  <Label fx:id="dealerNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Dealer Name" />
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
      <buttons>
         <ButtonBar prefHeight="40.0" prefWidth="200.0" />
         <ButtonBar prefHeight="40.0" prefWidth="200.0">
           <buttons>
             <Button mnemonicParsing="false" text="Tranfer" />
             <Button minWidth="50.0" mnemonicParsing="false" prefHeight="26.0" text="Add" textAlignment="CENTER" textFill="#333361" textOverrun="CLIP" />
           </buttons>
         </ButtonBar>
      </buttons>
   </ButtonBar>

  <!-- TableView for the vehicles -->
  <TableView fx:id="vehicleTable" prefHeight="300.0" prefWidth="600.0">
    <columns>
      <TableColumn fx:id="vehicleTypeColumn" prefWidth="105.60000306367874" text="Type" />
      <TableColumn fx:id="vehiclePriceColumn" prefWidth="148.00001525878906" text="Price" />
      <TableColumn fx:id="vehicleMakeColumn" prefWidth="153.6000518798828" text="Make" />
      <TableColumn fx:id="vehicleModelColumn" prefWidth="197.5999755859375" text="Model" />
    </columns>
  </TableView>
</VBox>
