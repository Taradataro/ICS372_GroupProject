<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<DialogPane fx:id="dialogPane"
            prefHeight="260" prefWidth="400"
            xmlns="http://javafx.com/javafx/23"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.VehicleDialogController">
    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="ID:"        GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="idField"        GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Type:"      GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="typeField"      GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Make:"      GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="makeField"      GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Model:"     GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="modelField"     GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Price:"     GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="priceField"     GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </content>
</DialogPane>
